<Window x:Class="Tarea3_LAP1_2Registro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea3_LAP1_2Registro"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <StackPanel>
            <Menu> 
                <MenuItem Header="Registros" >
                    <MenuItem Header="Estudiante" x:Name="rEstudiantes" Click ="RegistroEstudianteMenuItem_Click" />
                    <MenuItem Header="Carrera" x:Name="rCarrera" Click ="RegistroCarreraMenuItem_Click" />
                </MenuItem>
                <MenuItem Header="Consulta" >
                    <MenuItem Header="Estudiante" x:Name="cEstudiantes" Click ="ConsultaEstudianteMenuItem_Click" />
                    <MenuItem Header="Carrera" x:Name="cCarrera" Click ="ConsultaCarreraMenuItem_Click" />
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
